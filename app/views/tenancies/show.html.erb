<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @tenancy.property.property_name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dd><img src="<%= @tenancy.property.picture %>" class="img-responsive" ></dd>
              <dd></dd>
              <dt>Address</dt>
              <dd><%= @tenancy.property.street_number %> <%= @tenancy.property.street_name %></dd>
              <dd><%= @tenancy.property.city %>, <%= @tenancy.property.state %> <%= @tenancy.property.zip %></dd>

              <dt>Users</dt>

              <%# @tenancy.user.each do |user| %>
              <dd><%= @tenancy.user.user_name %></dd>
              <%# end %>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/tenancies" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/properties/<%= @tenancy.property.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_tenancy/<%= @tenancy.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
