<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Blog #<%= @blog.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Property</dt>
              <dd><%= @blog.property_id %></dd>

              <dt>Blog title</dt>
              <dd><%= @blog.blog_title %></dd>

              <dt>Blog content</dt>
              <dd><%= @blog.blog_content %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/blogs" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/blogs/<%= @blog.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_blog/<%= @blog.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
