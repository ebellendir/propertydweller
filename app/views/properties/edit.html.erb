<!-- Validation failure messages -->

<% if @property.errors.any? %>
<% @property.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Property #<%= @property.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_property/<%= @property.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for property_pic -->
          <div class="form-group">
            <label for="property_pic" class="col-sm-2 control-label">
              Property pic
            </label>
            <div class="col-sm-10">
              <input type="text" id="property_pic" name="property_pic" placeholder="Property pic" class="form-control" value="<%= @property.property_pic %>">
            </div>
          </div>

          <!-- Label and input for property_name -->
          <div class="form-group">
            <label for="property_name" class="col-sm-2 control-label">
              Property name
            </label>
            <div class="col-sm-10">
              <input type="text" id="property_name" name="property_name" placeholder="Property name" class="form-control" value="<%= @property.property_name %>">
            </div>
          </div>

          <!-- Label and input for zip -->
          <div class="form-group">
            <label for="zip" class="col-sm-2 control-label">
              Zip
            </label>
            <div class="col-sm-10">
              <input type="text" id="zip" name="zip" placeholder="Zip" class="form-control" value="<%= @property.zip %>">
            </div>
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="city" class="col-sm-2 control-label">
              City
            </label>
            <div class="col-sm-10">
              <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @property.city %>">
            </div>
          </div>

          <!-- Label and input for state -->
          <div class="form-group">
            <label for="state" class="col-sm-2 control-label">
              State
            </label>
            <div class="col-sm-10">
              <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @property.state %>">
            </div>
          </div>

          <!-- Label and input for street_name -->
          <div class="form-group">
            <label for="street_name" class="col-sm-2 control-label">
              Street name
            </label>
            <div class="col-sm-10">
              <input type="text" id="street_name" name="street_name" placeholder="Street name" class="form-control" value="<%= @property.street_name %>">
            </div>
          </div>

          <!-- Label and input for street_number -->
          <div class="form-group">
            <label for="street_number" class="col-sm-2 control-label">
              Street number
            </label>
            <div class="col-sm-10">
              <input type="text" id="street_number" name="street_number" placeholder="Street number" class="form-control" value="<%= @property.street_number %>">
            </div>
          </div>

          <!-- Label and input for prop_type_id -->
          <div class="form-group">
            <label for="prop_type_id" class="col-sm-2 control-label">
              Prop type
            </label>
            <div class="col-sm-10">
              <input type="text" id="prop_type_id" name="prop_type_id" placeholder="Prop type" class="form-control" value="<%= @property.prop_type_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Property
              </button>
              or
              <a href="/properties/<%= @property.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
